<h1><%= @stylist.name() %> - Details and Clients</h1>

<h3>Details:</h3>

<p>Name: <%= @stylist.name() %></p>

<h3>Update Details:</h3>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="patch">

    <label for="update_name" class="form-label">New name:</label>
    <input type="text" id="update_name" name="update_name" class="form-control">

    <button type="submit" class="btn">Update Stylist</button>
  </div>
</form>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="delete">

    <button type="submit" class="btn">Delete Stylist</button>
  </div>
</form>

<h3>Clients:</h3>

<% if @stylist.clients().any?() %>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
    <% end %>
  </ul>

<% else %>

  <p><%= @stylist.name() %> has no clients yet!</p>

<% end %>

<h3>Add a new Client for <%= @stylist.name() %>:</h3>

<form action="/clients" method="post">
  <div class="form-group">
    <input type="hidden" id="stylist_id" name="stylist_id" value="<%= @stylist.id() %>">

    <label for="name" class="form-label">Name of the Client:</label>
    <input type="text" id="name" name="name" class="form-control">

    <button type="submit" class="btn">Add Client</button>
  </div>
</form>

<p><a href="/">Return Home</a></p>
<p><a href="/stylists/new">Add a Stylist</a></p>
<p><a href="/stylists">See all Stylists</a></p>
